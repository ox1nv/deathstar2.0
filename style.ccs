body {
    font-family: sans-serif;
    background-color: #2a2a2a;
    color: white;
    margin: 0;
}

header {
    background-color: black;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
}

header img {
    height: 60px;
}

.button {
    background-color: #ffd700;
    color: black;
    padding: 8px 15px;
    text-decoration: none;
    border-radius: 5px;
}

nav {
    background-color: #3a3a3a;
    padding: 10px;
    text-align: center;
}

.nav-link {
    text-decoration: none;
    color: #ffd700;
    margin: 0 15px;
}

h1 {
    text-align: center;
    color: #ffd700;
    margin: 20px 0;
}

p {
    font-size: 18px;
}

.info {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
}

article {
    background-color: #444;
    padding: 15px;
    border-radius: 6px;
    width: 300px;
}

article img {
    width: 100%;
    height: auto;
    border-radius: 4px;
}

.article-but {
    display: inline-block;
    margin-top: 10px;
    background-color: #ffd700;
    color: black;
    padding: 6px 10px;
    text-decoration: none;
    border-radius: 4px;
}

footer {
    background-color: black;
    color: #ffd700;
    text-align: center;
    padding: 20px;
}

footer a img {
    width: 50px;
    height: 50px;
    margin: 0 10px;
}

footer p {
    margin-top: 10px;
    font-size: 16px;
}
